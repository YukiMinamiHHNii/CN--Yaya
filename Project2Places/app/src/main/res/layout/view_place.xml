<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewPlace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/placeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Name placeholder"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeTypeIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Type logo"
                android:src="@drawable/other" />

            <TextView
                android:id="@+id/placeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place type"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeAddressIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Address logo"
                android:src="@android:drawable/ic_menu_myplaces" />

            <TextView
                android:id="@+id/placeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place address"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placePhoneIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Phone logo"
                android:src="@android:drawable/ic_menu_call" />

            <TextView
                android:id="@+id/placePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place phone"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeUrlIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="URL logo"
                android:src="@android:drawable/ic_menu_compass" />

            <TextView
                android:id="@+id/placeUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place URL"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeInfoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Info logo"
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                android:id="@+id/placeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place info"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Date logo"
                android:src="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/placeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place info"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Time logo"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:id="@+id/placeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/placeRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/placePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Place image"
                android:src="@drawable/photo_epsg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Camera logo"
                    android:src="@android:drawable/ic_menu_camera"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Gallery logo"
                    android:src="@android:drawable/ic_menu_gallery"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</ScrollView>