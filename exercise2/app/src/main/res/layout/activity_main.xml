<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF"
    android:gravity="center">

    <Button
        android:id="@+id/drawableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_resource"
        android:onClick="pressed"/>

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/drawableButton"
        android:hint="Write a number"/>

    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="TestTag"
        android:layout_below="@id/input"
        android:layout_toRightOf="@id/drawableButton"
        android:text="Action"
        android:onClick="action"
        />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Result goes here"
        android:layout_below="@id/actionButton"
        android:layout_toRightOf="@id/drawableButton"/>

</RelativeLayout>